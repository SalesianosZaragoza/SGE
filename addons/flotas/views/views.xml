    <menuitem name="Vehiculo" id="flotas.menu_vehiculo" parent="flotas.menu"
              action="flotas.action_vehiculo"/>
    <menuitem name="Viaje" id="flotas.menu_viaje" parent="flotas.menu"
              action="flotas.action_viaje"/>

  </data>
</odoo>